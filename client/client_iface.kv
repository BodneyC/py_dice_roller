<TextBoxAndField>:
    name: 'default'
    value: 'default'
    pswd: False
    cols: 2
    rows: 1
    orientation: 'horizontal'
    Label:
        source: "images/Label"
        size_hint_x: .2
        text: root.name
    TextInput:
        id: box_val
        size_hint_x: .5
        text: root.value
        background_normal: "./images/normal.png"
        background_active: "./images/active.png"
        multiline: False
        password: root.pswd
        height: 40

<InputScreen>:
    GridLayout:
        orientation: 'vertical'
        cols: 1
        rows: 6
        size_hint: .8, .8
        pos_hint: { 'y': .1, 'x': .1 }
        padding: app.in_window_x * .05
        TextBoxAndField:
            id: addr_box
            name: "Address:"
            value: "localhost"
        TextBoxAndField:
            id: port_box
            name: "Port:"
            value: "8090"
        TextBoxAndField:
            id: username_box
            name: "Username:"
            value: "b"
        TextBoxAndField:
            id: password_box
            name: "Password:"
            value: "fish"
            pswd: True
        Label:
            id: err_box
            text: ""
        ButtonPair:
            cols: 2
            orientation: 'horizontal'
            size_hint_x: .5
            Button:
                background_color: (.78, .62, .84, 1)
                id: reset_button
                text: "Reset"
                on_release: root._reset()
            Button:
                background_color: (.78, .62, .84, 1)
                id: okay_button
                text: "Okay"
                on_release: root._okay()

<MainScreen>:
    GridLayout:
        cols: 1
        rows: 2
        padding: app.co_window_x * .05
        TextInput:
            id: msg_box
            background_disabled_normal: "./images/active.png"
            disabled: True
            text: "Welcome...\n--------------------------------------------------"
            # content_height: app.co_window_y * .48
        GridLayout:
            size_hint_y: .1
            rows: 1
            cols: 2
            Label:
                size_hint_x: .2
                text: "Message:"
            TextInput:
                background_normal: "./images/normal.png"
                background_active: "./images/active.png"
                background_disabled_normal: ''
                id: roll_box
                multiline: False
                height: 40

<Manager>:
    # InputScreen first but Main atm for testing
    InputScreen:
        name: "input"
        title: "Welcome..."
    MainScreen:
        name: "main"
        title: "Pray to RNG..."