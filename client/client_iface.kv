<TextBoxAndField>:
    name: 'default'
    value: 'default'
    pswd: False
    cols: 2
    rows: 1
    orientation: 'horizontal'
    Label:
        size_hint_x: .2
        text: root.name
    TextInput:
        id: box_val
        size_hint_x: .5
        text: root.value
        background_normal: './images/normal.png'
        background_active: './images/active.png'
        multiline: False
        password: root.pswd
        height: 40

<InputScreen@Screen>:

    GridLayout:
        size_hint: None, None
        size: (root.window_x * .8, root.window_y * .8)
        pos_hint: { 'x': ((root.size[0] / 2) - (self.size[0] / 2)) / root.size[0], 'y': ((root.size[1] / 2) - (self.size[1] / 2)) / root.size[1] }
        orientation: 'vertical'
        cols: 1
        rows: 6
        TextBoxAndField:
            id: addr_box
            name: 'Address:'
            value: 'localhost'
        TextBoxAndField:
            id: port_box
            name: 'Port:'
            value: '8090'
        TextBoxAndField:
            id: username_box
            name: 'Username:'
            value: ''
        TextBoxAndField:
            id: password_box
            name: 'Password:'
            value: ''
            pswd: True
        Label:
            id: err_box
            text: ''
        ButtonPair:
            cols: 2
            orientation: 'horizontal'
            size_hint_x: .5
            Button:
                background_color: (.78, .62, .84, 1)
                id: reset_button
                text: 'Reset'
                on_release: root._reset()
            Button:
                background_color: (.78, .62, .84, 1)
                id: okay_button
                text: 'Okay'
                on_release: root._okay()

<UpDownBox@GridLayout>:
    text: 'default'
    rows: 2
    cols: 2
    TextInput:
        background_normal: './images/normal.png'
        background_active: './images/active.png'
        id: box_val
        text: root.text
        height: 40
    GridLayout:
        size_hint_x: .3
        cols: 1
        rows: 2
        Button:
            background_color: (.78, .62, .84, 1)
            id: up
            text: '+1'
            on_release: root._up()
        Button:
            background_color: (.78, .62, .84, 1)
            id: down
            text: '-1'
            on_release: root._down()

<MainScreen@Screen>:
    GridLayout:
        cols: 1
        rows: 3
        padding: root.window_x * .05
        TextInput:
            id: msg_box
            background_normal: './images/active.png'
            background_active: './images/active.png'
            # disabled: True
            text: 'Welcome...\n--------------------------------------------------'
            # content_height: app.co_window_y * .48
        GridLayout:
            size_hint_y: .1
            rows: 1
            cols: 6
            UpDownBox:
                id: n_dice
                text: "1"
            Label:
                text: "d"
            UpDownBox:
                id: n_sides
                text: "20"
            Label:
                text: "mods:"
            UpDownBox:
                id: mods
                text: "0"
            Button:
                id: submit
                size_hint_x: 2
                background_color: (.78, .62, .84, 1)
                text: 'Submit'
                on_release: root._submit()
        GridLayout:
            size_hint_y: .1
            rows: 1
            cols: 2
            Label:
                size_hint_x: .2
                text: 'Message:'
            TextInput:
                id: roll_box
                background_normal: './images/normal.png'
                background_active: './images/active.png'
                background_disabled_normal: ''
                multiline: False
                height: 40

<Manager@ScreenManager>:
    # InputScreen first but Main atm for testing
    InputScreen:
        name: 'input'
        title: 'Welcome...'
    MainScreen:
        name: 'main'
        title: 'Pray to RNG...'
